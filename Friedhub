local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")

local player = Players.LocalPlayer

local lastCatchTime = 0
local catchCooldown = 0.25

-- Utility: Check if player is facing the ball (for angle enhancer)
local function isFacingTarget(hrpCFrame, targetPos)
    local lookVector = hrpCFrame.LookVector
    local dir = (targetPos - hrpCFrame.Position).Unit
    return lookVector:Dot(dir) > 0.5
end

-- Semi-Stealth Magnet Implementation (Your provided one)
local function semiStealthMagnet()
    local magRange = 28 -- close enough for stealth
    local delay = 0.05 -- smooth frame timing

    task.spawn(function()
        while true do
            local ball = workspace:FindFirstChild("Football") or workspace:FindFirstChildWhichIsA("Tool")
            if ball and ball:IsDescendantOf(workspace) then
                local char = player.Character
                if not char then task.wait(delay) continue end
                local left = char:FindFirstChild("CatchLeft")
                local right = char:FindFirstChild("CatchRight")
                if not (left and right) then task.wait(delay) continue end

                local mid = left.Position:Lerp(right.Position, 0.5)
                local dist = (ball.Position - mid).Magnitude

                if dist <= magRange then
                    local target = mid + Vector3.new(0, -1.1, -0.8)
                    -- Move ball safely to target spot avoiding lag and float
                    ball.CFrame = CFrame.new(target)
                    ball.Velocity = Vector3.zero
                end
            end
            task.wait(delay)
        end
    end)
end

-- Normal Magnet Modes: Legit, Blatant, League
local function normalMagnet(ball, hrp)
    local settings = settings -- from main script context
    local bv = ball:FindFirstChild("FriedHubMagnetBodyVelocity")
    if not bv then
        bv = Instance.new("BodyVelocity")
        bv.Name = "FriedHubMagnetBodyVelocity"
        bv.MaxForce = Vector3.new(1e5, 1e5, 1e5)
        bv.Parent = ball
    end

    if settings.magnetMode == "Legit" then
        local char = player.Character
        if not char then return end
        local catchPosLeft = char:FindFirstChild("CatchLeft")
        local catchPosRight = char:FindFirstChild("CatchRight")
        if catchPosLeft and catchPosRight then
            -- Lerp between catch left/right for realistic movement
            local targetPos = catchPosLeft.Position:Lerp(catchPosRight.Position, 0.5)
            bv.Velocity = (targetPos - ball.Position) * 15
        else
            bv.Velocity = Vector3.new(0,0,0)
        end

    elseif settings.magnetMode == "Blatant" then
        bv.Velocity = (hrp.Position - ball.Position) * 50

    elseif settings.magnetMode == "League" then
        -- More subtle magnet (medium speed)
        bv.Velocity = (hrp.Position - ball.Position) * 30

    else
        -- fallback: no velocity
        bv.Velocity = Vector3.new(0,0,0)
    end
end

-- Jump boost when catching the ball
local function jumpBoostOnCatch()
    if not settings.jumpBoostOnCatch then return end
    local char = player.Character
    if not char then return end
    local humanoid = char:FindFirstChildOfClass("Humanoid")
    if not humanoid then return end

    if humanoid:GetState() ~= Enum.HumanoidStateType.Freefall then
        humanoid.JumpPower = humanoid.JumpPower + settings.jumpBoostAmount
        humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
        task.delay(0.3, function()
            if humanoid then
                humanoid.JumpPower = 50 -- reset to default after boost
            end
        end)
    end
end

-- Main magnet and auto catch heartbeat logic
RunService.Heartbeat:Connect(function()
    if not (settings.magnetEnabled or settings.autoCatch) then return end

    local ball = workspace:FindFirstChild("Football")
    local char = player.Character
    if not ball or not char then return end

    local hrp = char:FindFirstChild("HumanoidRootPart")
    if not hrp then return end

    local now = tick()
    if now - lastCatchTime < catchCooldown then return end

    -- Predict ball position a little ahead
    local predictedPos = ball.Position + (ball.AssemblyLinearVelocity * 0.15)
    local distPredicted = (predictedPos - hrp.Position).Magnitude

    local facing = true
    if settings.angleEnhancer then
        facing = isFacingTarget(hrp.CFrame, ball.Position)
    end

    -- Magnet modes control
    if settings.magnetEnabled and distPredicted <= settings.magnetRange and facing then
        if settings.magnetMode == "Semi-Stealth" then
            -- Semi stealth magnet handled separately
            -- Just do nothing here, semiStealthMagnet runs independently
        else
            normalMagnet(ball, hrp)
        end
    else
        -- Remove magnet BodyVelocity when out of range or disabled
        local bv = ball:FindFirstChild("FriedHubMagnetBodyVelocity")
        if bv then bv:Destroy() end
    end

    -- Auto catch logic (simple touch simulation)
    if settings.autoCatch and distPredicted <= 7 then
        -- Simulate catch (you might need to adjust to your game)
        -- Using Humanoid Root Part to touch catch points
        local catchLeft = char:FindFirstChild("CatchLeft")
        local catchRight = char:FindFirstChild("CatchRight")
        if catchLeft and catchRight then
            ball.CFrame = catchLeft.CFrame:Lerp(catchRight.CFrame, 0.5)
            lastCatchTime = now

            jumpBoostOnCatch()
        end
    end
end)

-- Start semi-stealth magnet task if enabled
if settings.magnetMode == "Semi-Stealth" and settings.magnetEnabled then
    semiStealthMagnet()
end

-- Anti-glitch fix: Prevent ball disappearing after seconds in air
local ballTimeouts = {}

workspace.ChildAdded:Connect(function(child)
    if child.Name == "Football" and child:IsA("BasePart") then
        ballTimeouts[child] = 0
        task.spawn(function()
            local ball = child
            local counter = 0
            while ball.Parent == workspace do
                task.wait(0.5)
                counter = counter + 0.5

                -- Reset counter if velocity or parent changes meaning ball is active
                if ball.Velocity.Magnitude > 0.1 then
                    counter = 0
                end
                if counter > 10 then
                    -- After 10 seconds still no movement, destroy attachments to prevent disappearing
                    for _, v in ipairs(ball:GetChildren()) do
                        if v:IsA("BodyVelocity") or v.Name == "FriedHubMagnetBodyVelocity" then
                            v:Destroy()
                        end
                    end
                    counter = 0
                end
            end
        end)
    end
end)
    end
end)local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")

local LocalPlayer = Players.LocalPlayer

local FootballLandingPredictions = true
local UseTrail = true

local Gravity = Vector3.new(0, -28, 0)
local SegmentCount = 160
local TimeStep = 0.035

-- Trajectory calculation
local function getTrajectory(startPos, velocity)
    local pos, vel = startPos, velocity
    local points = {pos}
    for _=1, SegmentCount do
        vel += Gravity * TimeStep
        pos += vel * TimeStep
        table.insert(points, pos)
        if pos.Y < 0 then break end
    end
    return points, pos
end

-- Create beam arc for ball path
local function makeArc(points, color)
    local atts, beams = {}, {}
    for _, p in ipairs(points) do
        local a = Instance.new("Attachment")
        a.WorldPosition = p
        a.Parent = workspace.Terrain
        table.insert(atts, a)
    end
    for i=1, #atts-1 do
        local b = Instance.new("Beam")
        b.Attachment0 = atts[i]
        b.Attachment1 = atts[i+1]
        b.Width0 = 0.85
        b.Width1 = 0.85
        b.Color = ColorSequence.new(color)
        b.Transparency = NumberSequence.new(0.02)
        b.LightEmission = 0.5
        b.Segments = 2
        b.FaceCamera = true
        b.Parent = workspace.Terrain
        table.insert(beams, b)
    end
    return beams, atts
end

-- Glow animation on beams
local function glowLoop(beams)
    task.spawn(function()
        local info = TweenInfo.new(1, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut, -1, true)
        for _, b in ipairs(beams) do
            TweenService:Create(b, info, {LightEmission = 2}):Play()
        end
        while beams[1] and beams[1].Parent do task.wait() end
    end)
end

-- Ring marker at landing position
local function ringMarker(pos, color)
    local ring = Instance.new("Part")
    ring.Anchored = true
    ring.CanCollide = false
    ring.Transparency = 1
    ring.Size = Vector3.new(1, 0.1, 1)
    ring.Position = pos + Vector3.new(0, 0.1, 0)
    ring.Material = Enum.Material.Neon
    ring.Color = color
    ring.Parent = workspace.Terrain

    local mesh = Instance.new("SpecialMesh", ring)
    mesh.MeshType = Enum.MeshType.Cylinder
    mesh.Scale = Vector3.new(0.1, 0.05, 0.1)

    TweenService:Create(mesh, TweenInfo.new(1), {Scale = Vector3.new(8, 0.05, 8)}):Play()
    TweenService:Create(ring, TweenInfo.new(1), {Transparency = 1}):Play()
    task.delay(1, function() ring:Destroy() end)
end

-- Ball trail effect
local function addTrail(part)
    local a0 = Instance.new("Attachment", part)
    local a1 = Instance.new("Attachment")
    a1.Parent = workspace.Terrain
    local beam = Instance.new("Beam")
    beam.Attachment0 = a0
    beam.Attachment1 = a1
    beam.Width0 = 0.4
    beam.Width1 = 0
    beam.LightEmission = 1
    beam.LightInfluence = 0
    beam.Segments = 2
    beam.Color = ColorSequence.new(Color3.fromRGB(255, 125, 0))
    beam.Transparency = NumberSequence.new(0,1)
    beam.FaceCamera = true
    beam.Parent = part

    local con
    con = RunService.Heartbeat:Connect(function()
        if part and part.Parent == workspace then
            a1.WorldPosition = part.Position - part.Velocity.Unit * 2
        else
            beam:Destroy()
            a0:Destroy()
            a1:Destroy()
            con:Disconnect()
        end
    end)
end

-- Fade out beam visuals
local function fadeOutBeams(beams, duration)
    task.spawn(function()
        local steps = 30
        for step=1, steps do
            local t = step/steps
            for _, b in ipairs(beams) do
                b.Transparency = NumberSequence.new(t)
            end
            task.wait(duration/steps)
        end
        for _, b in ipairs(beams) do
            b.Transparency = NumberSequence.new(1)
        end
    end)
end

-- Listen for new footballs and create ball path prediction & visuals
workspace.ChildAdded:Connect(function(b)
    if b.Name == "Football" and b:IsA("BasePart") then
        task.wait()
        RunService.Heartbeat:Wait()
        local velocity = b.AssemblyLinearVelocity
        local color = Color3.fromRGB(255, 125, 0) -- Orange color
        local points, landing = getTrajectory(b.Position, velocity)
        local beams, atts = makeArc(points, color)
        glowLoop(beams)
        ringMarker(landing, color)
        if UseTrail then addTrail(b) end

        local con
        con = RunService.Heartbeat:Connect(function()
            if b.Velocity.Magnitude < 1 then
                if FootballLandingPredictions then
                    fadeOutBeams(beams, 1)
                else
                    for _, beam in ipairs(beams) do
                        beam.Transparency = NumberSequence.new(1)
                    end
                end
                for _, a in ipairs(atts) do a:Destroy() end
                con:Disconnect()
            end
        end)

        repeat task.wait() until b.Parent ~= workspace
        for _, beam in ipairs(beams) do beam.Transparency = NumberSequence.new(1) end
        for _, a in ipairs(atts) do a:Destroy() end
    end
end)

-- Ball ESP logic (basic highlight around ball)
local function createBallESP(ball)
    local highlight = Instance.new("Highlight")
    highlight.Name = "FriedHubBallESP"
    highlight.Adornee = ball
    highlight.FillColor = Color3.fromRGB(255, 140, 0)
    highlight.OutlineColor = Color3.new(1,1,1)
    highlight.Parent = ball
    return highlight
end

local currentESP = nil

RunService.Heartbeat:Connect(function()
    if settings.esp then
        local ball = workspace:FindFirstChild("Football")
        if ball then
            if not currentESP or currentESP.Adornee ~= ball then
                if currentESP then currentESP:Destroy() end
                currentESP = createBallESP(ball)
            end
        else
            if currentESP then
                currentESP:Destroy()
                currentESP = nil
            end
        end
    else
        if currentESP then
            currentESP:Destroy()
            currentESP = nil
        end
    end
end)
